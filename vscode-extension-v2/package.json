{
  "name": "devcopilot-v2",
  "displayName": "DevCopilot v2 - Advanced Edition",
  "description": "Advanced semantic code search (HyDE/RAG) and PR summarization with API-based LLM integration",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:devcopilotV2.indexRepository",
    "onCommand:devcopilotV2.showPipelineStatus",
    "onCommand:devcopilotV2.searchCodeHyde",
    "onCommand:devcopilotV2.searchCodeRag",
    "onCommand:devcopilotV2.summarizePR",
    "onCommand:devcopilotV2.selectRepository"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devcopilotV2.indexRepository",
        "title": "DevCopilot v2: Index Repository",
        "icon": "$(database)"
      },
      {
        "command": "devcopilotV2.showPipelineStatus",
        "title": "DevCopilot v2: Show Pipeline Status",
        "icon": "$(info)"
      },
      {
        "command": "devcopilotV2.searchCodeHyde",
        "title": "DevCopilot v2: Search Code (HyDE)",
        "icon": "$(search)"
      },
      {
        "command": "devcopilotV2.searchCodeRag",
        "title": "DevCopilot v2: Ask Question (RAG)",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "devcopilotV2.summarizePR",
        "title": "DevCopilot v2: Summarize PR",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "devcopilotV2.selectRepository",
        "title": "DevCopilot v2: Select Repository",
        "icon": "$(folder-opened)"
      },
      {
        "command": "devcopilotV2.setApiKey",
        "title": "DevCopilot v2: Set API Key",
        "icon": "$(key)"
      }
    ],
    "configuration": {
      "title": "DevCopilot v2",
      "properties": {
        "devcopilotV2.pythonPath": {
          "type": "string",
          "default": "D:\\dev-copilot\\env\\Scripts\\python.exe",
          "description": "Path to Python executable"
        },
        "devcopilotV2.cliPath": {
          "type": "string",
          "default": "D:\\dev-copilot\\cli_v2.py",
          "description": "Path to cli_v2.py (leave empty for workspace root)"
        },
        "devcopilotV2.apiKey": {
          "type": "string",
          "default": "",
          "description": "[NOT RECOMMENDED] LLM API Key. Use 'DevCopilot v2: Set API Key' command or set LLM_API_KEY environment variable instead."
        },
        "devcopilotV2.apiUrl": {
          "type": "string",
          "default": "https://api.groq.com/openai/v1/chat/completions",
          "description": "LLM API endpoint URL"
        },
        "devcopilotV2.modelName": {
          "type": "string",
          "default": "llama-3.3-70b-versatile",
          "description": "LLM model name"
        },
        "devcopilotV2.chromaDbPath": {
          "type": "string",
          "default": "D:\\dev-copilot\\data\\chroma_db",
          "description": "Path to ChromaDB storage"
        },
        "devcopilotV2.collectionName": {
          "type": "string",
          "default": "flask_code",
          "description": "ChromaDB collection name"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "devcopilotV2.resultsView",
          "name": "DevCopilot v2 Results",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  }
}
